---
import {Button} from "@components/lib/ui/button"

interface Props {
	title: string
	ref: string
}

const {title, ref} = Astro.props
---

<a href={ref}>
	<Button className="h-fit text-xl rounded-none hover:bg-transparent hover:border-b-4 hover:border-accent-foreground" variant={"ghost"}>
		{title}
	</Button>
</a>

